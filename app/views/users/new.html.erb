<% provide(:title, 'Sign up') %>
<div class="container hero-unit" style="padding: 3em; width: 800px; font-size: 14px; padding: 10px;">
	<h1>Sign up</h1>
	<div class="row" style="margin-left: -40px;">
	  <div class="span6 offset3">
	    <%= form_for(@user) do |f| %>
	      <%= render 'fields', f: f %>
	      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
	    <% end %>

	  </div>
	</div>
</div>