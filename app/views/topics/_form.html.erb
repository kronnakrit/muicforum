<%= form_for([@board, @topic]) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Topic" %>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  	<div class="field">
	  <%= f.label :keyword_list, "Tags (separated by commas, only 5 tags are allowed, and do not include any symbol.)" %>
	  <%= f.text_field :keyword_list, class:"form-control" %>
	</div>
 
  <div class="field">
    <%= f.label "Content" %>
    <%= f.text_area :subtitle, :size => "60x10", class:"form-control" %>
  </div>
  
  <div class="actions" style="text-align: center;">
    <%= f.submit :as => "Create Post", class: "btn btn-primary" %>
  </div>
<% end %>