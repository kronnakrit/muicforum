<ol class="breadcrumb">
  <li><%= link_to 'Home', boards_path %></li> /
  <li><%= link_to @board.title, @board %></li> /
  <li><%= link_to @topic.title, @topic %>
</ol><p id="notice"><%= notice %></p>
 
<div class="panel panel-default">
  <div class="date right"><%= @topic.created_at.time.localtime.to_formatted_s(:db)%></div>
  <div class="panel-heading">
    <div><h3 class="panel-title"><%= @topic.title %></h3>
    </div>
    <div id="username">by <%= link_to @topic.user.name, @topic.user %></div>
  </div>
  <div class="panel-body" style="margin-top: 1.5em;">
    <%= @topic.subtitle %>
  </div>
</div>
<% @topic.comments.each do |comment| %>
	<div class="panel panel-default">
	  <div class="panel-body" style="margin-bottom: 0.8em;">
	    <%=comment.content%><br/>
	  </div>
	  <div class="panel-footer">
	  	<div style="margin-top: 5px;">
		  	<%= link_to comment.user.name, comment.user %> <br/>
		    <div style="color: #bbb;">Posted At <%= comment.created_at.time.localtime.to_formatted_s(:db)%></div>
	    </div>
	  </div>
	</div>
<% end %>

<%= form_for([@topic, @topic.comments.build]) do |f| %>
  <div class="field">
    <%= f.label 'Comment' %>
    <%= f.text_area :content %>
  </div>
   <div class="actions" style="text-align: center;">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>



