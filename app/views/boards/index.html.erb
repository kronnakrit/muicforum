<% if !signed_in? %>
	<div class="center jumbotron">
	  <h1>Welcome to the MUIC</h1>
	  <p>
	    This website is available only for Mahidol University Internation College students.
	  </p>
	  <%= link_to "Sign up now!", new_user_url, class: "btn btn-primary btn-lg" %>
	</div>
<% else %>
		<div class="container">
		  <% @boards.each do |board| %>
		  <div class="board-container" style="padding: 0px;" >
			  <div class="panel panel-default">
				  <div class="panel-heading" style="border-radius: 6px;">
				    <h2 class="panel-title board" style="color: #586996;"><%= link_to board.title, board, class: "fill-div" %></h2>
				  </div>
				  <div class="subtitle-body" style="margin-top: 10px; font-size: 16px; margin-left: 10px;">
				    <%= board.subtitle %>
	 			  </div>
			  </div>
			 </div>
		  <% end %>
		</div>
	  
<% end %>




