<h1 style="margin-left: -20px;"><i class="fa fa-cloud"></i> Tag Cloud</h1>
<div class="tagcontainer">
	<div id="tag_cloud" style="margin-left: 10em ;">
		  <% tag_cloud Topic.keyword_counts, %w{s m l} do |tag, css_class| %>
		    	<%= link_to tag.name, tag_path(tag.name), class: css_class %>
		  <% end %>
	</div>
</div>